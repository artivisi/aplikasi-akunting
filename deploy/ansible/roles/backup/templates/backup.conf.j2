# Backup Configuration
# Generated by Ansible - but can be manually edited after deployment
# Location: /opt/{{ app_name }}/backup.conf

# Application
APP_NAME="{{ app_name }}"
APP_USER="{{ app_user }}"

# Directories
BACKUP_DIR="/opt/${APP_NAME}/backup"
DOCUMENTS_DIR="/opt/${APP_NAME}/documents"
SCRIPTS_DIR="/opt/${APP_NAME}/scripts"
LOG_FILE="/var/log/${APP_NAME}/backup.log"

# Encryption
BACKUP_KEY="/opt/${APP_NAME}/.backup-key"

# Local Backup
BACKUP_RETENTION_COUNT={{ backup_retention_count | default(7) }}

# Backblaze B2
BACKUP_B2_ENABLED={{ 'true' if backup_b2_enabled | default(false) else 'false' }}
BACKUP_B2_BUCKET="{{ backup_b2_bucket | default('') }}"
BACKUP_B2_RETENTION_WEEKS={{ backup_b2_retention_weeks | default(4) }}

# Google Drive
BACKUP_GDRIVE_ENABLED={{ 'true' if backup_gdrive_enabled | default(false) else 'false' }}
BACKUP_GDRIVE_FOLDER="{{ backup_gdrive_folder | default('accounting-backup') }}"
BACKUP_GDRIVE_RETENTION_MONTHS={{ backup_gdrive_retention_months | default(12) }}

# rclone remotes (configured in ~/.config/rclone/rclone.conf)
RCLONE_B2_REMOTE="b2"
RCLONE_GDRIVE_REMOTE="gdrive"
